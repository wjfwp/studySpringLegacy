<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- namespace에는 구현인터페이스 풀경로 -->
  <mapper namespace="com.simple.basic.mapper.TestMapper">
  
  	<!-- id는 추상메서드 명 -->
  	<!-- select태그에 resultType에는 결과를 반환 받아서 나올 타입 or 객체 -->
  	<!-- 세미콜론은 적지 않는다 -->
  	<select id="getTime" resultType="string">
  		select now()
  	</select>
  	
  	<!-- 파라미터타입 = int, double, string -->
  	<!-- 매개변수가 단일값이라면 인터페이스 이름을 따라간다. -->
  	<!-- parameterType="string" 파라미터 타입은 생략이 가능하다. -->
  	<insert id="insertOne" >
  		insert into score (name)
  		values(#{name})
  	</insert>
  </mapper>